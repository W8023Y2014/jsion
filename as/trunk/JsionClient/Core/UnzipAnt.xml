<project name="UnzipSwcFile" default="main">

	<property name="SWC_ROOT" value="E:\Code\JsionCode\as\trunk\KGame" />
	<property name="TEMP_DIR" value="c:/temp" />
	
	<target name="main">
		<antcall target="prepare"></antcall>
		
		<antcall target="UnzipJsionCore"></antcall>
		
		<antcall target="UnzipLoading"></antcall>
		
		<antcall target="prepare"></antcall>
	</target>
	
	<target name="UnzipJsionCore">
		<echo>Unzip the JsionCore.swc file.</echo>
		<unzip src="${SWC_ROOT}/KAssets/libs/JsionCore.swc" dest="${TEMP_DIR}"></unzip>
		<copyfile src="${TEMP_DIR}/library.swf" dest="${SWC_ROOT}/KAssets/libs/JsionCore.swf" />
	</target>
	
	<target name="UnzipLoading">
		<echo>Unzip the JsionCore.swc file.</echo>
		<unzip src="${SWC_ROOT}/KLoading/bin/KLoading.swc" dest="${TEMP_DIR}"></unzip>
		<copyfile src="${TEMP_DIR}/library.swf" dest="${SWC_ROOT}/KLoading/bin/KLoading.swf" />
	</target>

	<target name="prepare">
		<echo>Delete files in temp dir dir.</echo>
		<delete quiet="true">
			<fileset dir="${TEMP_DIR}" includes="*.*"></fileset>
		</delete>
	</target>
	
</project>